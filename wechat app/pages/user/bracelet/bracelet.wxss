.container {
  display: flex;
  flex-direction: column;
  padding: 0;

}
.banner {
  width: 100%;
  height: 320rpx;
  background-color: #e0620d;
  display: flex;
  flex-direction: column;
  text-align: center;
  font-family: Microsoft Yahei;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin: 80rpx 310rpx;
  
}
.section {
  display: flex;
  flex-direction: row;
  margin: 10px auto;
  width: 100%;
  padding: 5px;
  font-size: 14px;
  background-color: white;
  border-radius: 5px;
}

.section input {


}
.vertical_line{
  height: 15px;
  width: 10px;
  margin: 5px;
}
.btn-area {
  width: 90%;
  margin: 20px auto;
  display: flex;
  border-radius: 5px;
  height: 90rpx;
}

.btn-area button {
  flex: 1;
  max-width: 90%;
  font-size: 14px;
}

.section-text{
  font-size: 14px;
}