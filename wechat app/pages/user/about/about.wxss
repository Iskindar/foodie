.head{
    display: flex;
    flex-direction: column;
    margin-bottom: 20rpx;
    background-color: #fff;
}
.head-title{
    padding:12rpx 10rpx;
    font-size: 50rpx;
    margin: 20rpx 30rpx 20rpx 30rpx;
    border-bottom: 1px #ededed solid;
}
.head-text{
    color: #13c71f;
    float: right;
    
}
.head-img{
  width: 100%;
  
}
.summary{
    display: flex;
    flex-direction: column;
    margin-bottom: 40rpx;
    background-color: #fff;
    margin-left: 20rpx;
    padding-left: 20rpx;
    border-bottom: 1px #ededed solid;
}
.summary-title{
    font-size: 40rpx;
    
}
.summary-text{
    font-size: 30rpx;
    text-indent: 2em;
    margin-top: 10rpx;
}
.summary-bottom{
    display: flex;
    flex-direction: row;
    margin-bottom: 24rpx;
}
.summary-bottom image{
    width: 30rpx;
    height: 50rpx;
    margin: 30rpx 20rpx 10rpx 20rpx ;
}
.summary-bottomText{
    font-size: 20rpx;
    color: #8a8a8a;
    margin-top: 10rpx;
}
.summary-bottomText-container{
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
    margin-top: 20rpx;
}
.bottom{
    display: flex;
    flex-direction: row;
    background-color: #fff;
    margin: 20rpx 0  20rpx 50rpx;
    padding: 15rpx;
    position: absolute;
    bottom: 0;
}

.bottom-text{
    font-size: 30rpx;
    color: #1296db;
   margin-right: 10rpx;
}
