<view>
  <view class="flex-row">
    <text class="flex-row-left">头像</text>
    <image src="{{userInfo.avatarUrl}}" class="flex-row-right-img"></image>
  </view>
  <view class="flex-row">
    <text class="flex-row-left">昵称</text>
    <text class="flex-row-right">{{userInfo.nickName}}</text>
  </view>
   <view class="flex-row">
    <text class="flex-row-left">性别</text>
    <text class="flex-row-right">{{userInfo.gender?"男":"女"}}</text>
  </view>
  <view class="flex-row">
    <text class="flex-row-left">地区</text>
    <text class="flex-row-right">{{userInfo.province + " " +userInfo.city}}</text>
  </view>
  <view class="flex-row">
    <text class="flex-row-left">身高</text>
    <text class="flex-row-right">170cm</text>
  </view>
  <view class="flex-row">
    <text class="flex-row-left">体重</text>
    <text class="flex-row-right">63kg</text>
  </view>
  <view class="flex-row">
