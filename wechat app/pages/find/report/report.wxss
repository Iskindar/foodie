Page {
  background-color: whitesmoke;
}

.report-container {
  margin-top: 30px;
  border-radius: 5%;
  display: flex;
  flex-direction: row;
  background-color: white;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.report-text{
  font-size: 36rpx;
  
  margin-left: 30rpx;
  margin-top: 30rpx;
}
.report-circle {
  width: 270rpx;
  height: 200rpx;
}

.flex-column {
  display: flex;
  flex-direction: column;
  text-align: center;
}

.circle-container {
  margin-left: 20rpx;
}

.report-content {
  font-size: 30rpx;
  color: #999;
  margin-bottom: 10px;
}

.report-bottom {
  display: flex;
  flex-direction: row;
  margin-top: 60rpx;
  margin-left: 30rpx;
  padding-left: 30rpx;
}

.report-image {
  width: 30rpx;
  height: 30rpx;
  margin-left: 20rpx;
}

.report-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-left: 30rpx;
  margin-top: 30rpx;
}
