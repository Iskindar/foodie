@import "post-item/post-item-template.wxss";

.container {
  display: flex;
  flex-direction: column;
  padding: 0;

}

.banner {
  width: 100%;
  height: 320rpx;
  background-color: #e0620d;
  display: flex;
  flex-direction: column;
  text-align: center;
  font-family: Microsoft Yahei;
}
.hr{
    margin-top:45rpx;
    height:1px;
    width: 100%;
    background-color: #d9d9d9;
}
.post-container-title{
  font-size: 50rpx;
  margin-top: 50rpx;
  text-align: center;
  color: #dd6572;
  font-weight: bold;
}

.banner-title {
  color: white;
  font-size: 60rpx;
  margin-top: 40rpx;
  font-weight: bold;
}

.banner-subtitle {
  margin-top: 60rpx;
  color: white;
  font-size: 38rpx;
}

.mainFunction-row {
  display: flex;
  flex-direction: row;
  text-align: center;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

.singleFunction-container {
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
  color: #707070;
  width: 220rpx;
  padding: 15rpx;
}
.vertical-line{
  height: 190rpx;
  width: 1px;
  margin-left: 10rpx;
  margin-right: 10rpx;
  margin-top: 20rpx;
}
.singleFunction-img {
  width: 140rpx;
  height: 140rpx;
  margin-left: 40rpx;
}

.hr{
    margin-top:10rpx;
    height:1px;
    width: 100%;
    background-color: #d9d9d9;
}

.foodPost{
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    background-color: #fff;
    border-bottom: 1px solid #ededed;
    border-top: 1px solid #ededed;
    padding-bottom: 5px;
}